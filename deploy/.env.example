# Vedium LMS - Environment Variables
# Copy this file to .env and fill in the values
# NEVER commit .env to version control!

# ===========================================
# Server Configuration
# ===========================================
SERVER_IP=45.151.122.234
DOMAIN=vediums.com
ADMIN_EMAIL=admin@vediums.com

# ===========================================
# Database (MariaDB)
# ===========================================
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_DATABASE=vedium
MYSQL_USER=frappe
MYSQL_PASSWORD=your_secure_frappe_password_here

# ===========================================
# Frappe/ERPNext
# ===========================================
FRAPPE_ADMIN_PASSWORD=your_secure_admin_password_here
FRAPPE_SITE_NAME=app.vediums.com

# ===========================================
# Backup Configuration
# ===========================================
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_here
BACKUP_DIR=/opt/vedium/backups
RETENTION_DAYS=30

# ===========================================
# Email/SMTP (for notifications)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_USE_TLS=true

# ===========================================
# GitHub Actions Secrets (for CI/CD)
# These should be set in GitHub repository settings
# ===========================================
# SSH_PRIVATE_KEY=<your_ssh_private_key>
# SSH_KNOWN_HOSTS=<ssh-keyscan output for your server>
# DEPLOY_USER=root
# DEPLOY_HOST=45.151.122.234
# DEPLOY_PATH=/opt/vedium

# ===========================================
# Optional: Monitoring/Alerting
# ===========================================
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx
# TELEGRAM_BOT_TOKEN=your_bot_token
# TELEGRAM_CHAT_ID=your_chat_id
